<% @count = @max_weeks > @cut_off ? @cut_off : @max_weeks
0.upto @count.to_i-1 do |i| -%>
  <%= @actions_completion_time_hash[i] -%>,
<% end -%>
<%
@sum=0
@count.upto @max_weeks do |i|
  @sum += @actions_completion_time_hash[i]
end -%>
<%=@sum%>&
