remove_deleted_project();
ProjectListPage.update_all_states_count(<%=@active_projects_count%>, <%=@hidden_projects_count%>, <%=@completed_projects_count%>)
TracksPages.page_notify('notice', "Deleted project '<%= @project.name%>'", 5);
